@model Web_HW03.Models.BlogPost

@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>

<h4>BlogPost</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <textarea asp-for="Body" rows="15" class="form-control editable"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <label asp-for="Image" class="control-label"></label>
            <input asp-for="Image" type="file" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="TagsString" class="control-label"></label>
                <input asp-for="TagsString" class="form-control" />
                <span asp-validation-for="TagsString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h3>Images</h3>
        <form asp-action="ImageUpload" enctype="multipart/form-data">
            <label asp-for="Image" class="control-label"></label>
            <input asp-for="Image" type="file" />
            <div class="form-group">
                <input type="submit" value="Upload Image" class="btn btn-info" />
            </div>
        </form>
        <ul>
            @foreach (var imgPath in (IEnumerable<String>)ViewData["images"])
            {
                <li>
                    <p>@imgPath</p>
                    <img src="@imgPath" height="64" />
                </li>
            }
        </ul>
    </div>foreach
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}    
}